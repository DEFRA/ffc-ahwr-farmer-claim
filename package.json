{
  "name": "ffc-ahwr-farmer-claim",
  "version": "3.1.0",
  "description": "Web frontend for farmer claim journey",
  "homepage": "https://github.com/DEFRA/ffc-ahwr-farmer-claim",
  "main": "app/index.js",
  "type": "module",
  "scripts": {
    "build": "webpack",
    "build:watch": "webpack --watch",
    "pretest": "npm run lint",
    "test": "jest --runInBand",
    "test:watch": "jest --coverage=false --onlyChanged --watch --runInBand",
    "test:watch:all": "npm-run-all --parallel test:watch build:watch",
    "test:debug": "node --inspect-brk=0.0.0.0 ./node_modules/jest/bin/jest.js --coverage=false --onlyChanged --watch --runInBand --no-cache",
    "lint": "standard",
    "lint:fix": "standard --fix",
    "start:watch": "npm-run-all --parallel build:watch start:nodemon",
    "start:debug": "nodemon --inspect-brk=0.0.0.0 --ext css,js,njk --legacy-watch app/index.js",
    "start:nodemon": "nodemon --inspect=0.0.0.0 --ext css,js,njk --legacy-watch app/index.js"
  },
  "author": "Defra",
  "contributors": [
    "Steve Dickinson steve.dickinson@defra.gov.uk"
  ],
  "license": "OGL-UK-3.0",
  "dependencies": {
    "@2toad/profanity": "3.1.1",
    "@azure/identity": "4.10.2",
    "@hapi/boom": "9.1.4",
    "@hapi/catbox-redis": "6.0.2",
    "@hapi/cookie": "11.0.2",
    "@hapi/crumb": "8.0.1",
    "@hapi/hapi": "20.3.0",
    "@hapi/inert": "6.0.5",
    "@hapi/vision": "6.1.0",
    "@hapi/wreck": "18.1.0",
    "@hapi/yar": "10.1.1",
    "applicationinsights": "2.9.7",
    "ffc-ahwr-common-library": "2.6.7",
    "ffc-messaging": "2.10.2",
    "form-data": "4.0.4",
    "govuk-frontend": "5.11.2",
    "hapi-pino": "9.4.0",
    "http-status-codes": "2.3.0",
    "joi": "17.13.3",
    "jsonwebtoken": "9.0.2",
    "jwk-to-pem": "2.0.7",
    "nunjucks": "3.2.4",
    "uuid": "8.3.2"
  },
  "overrides": {
    "@azure/identity": {
      "jsonwebtoken": "9.0.2"
    },
    "semver": "7.5.2"
  },
  "devDependencies": {
    "@babel/core": "7.28.4",
    "@babel/plugin-transform-modules-commonjs": "7.27.1",
    "@hapi/catbox-memory": "5.0.1",
    "@types/cheerio": "0.22.35",
    "@types/hapi__hapi": "20.0.13",
    "@types/jest": "27.5.2",
    "@types/node": "17.0.45",
    "babel-jest": "29.7.0",
    "cheerio": "1.1.2",
    "clean-webpack-plugin": "4.0.0",
    "css-loader": "7.1.2",
    "dotenv": "16.6.1",
    "html-webpack-plugin": "5.6.3",
    "jest": "29.7.0",
    "jest-junit": "13.2.0",
    "jest-when": "3.7.0",
    "mini-css-extract-plugin": "2.9.2",
    "nodemon": "2.0.22",
    "npm-run-all": "4.1.5",
    "pino-pretty": "7.6.1",
    "resolve-url-loader": "5.0.0",
    "sass": "1.89.2",
    "sass-loader": "12.6.0",
    "standard": "16.0.4",
    "webpack": "5.100.2",
    "webpack-cli": "4.10.0"
  },
  "standard": {
    "env": {
      "jest": true
    },
    "globals": [
      "$",
      "browser"
    ],
    "ignore": [
      "app/frontend/dist/**/*.js",
      "test/acceptance/**/*.js",
      "test/acceptance/**/*.mjs",
      "test/acceptance/**/*.cjs"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "**/test-output/**"
    ]
  }
