{% extends './layouts/layout.njk' %}

{% block pageTitle %}What is the vet’s name? - {{ serviceName }}{% endblock %}

{% block beforeContent %}
  {{ govukBackLink({
    text: "Back",
    href: "/claim/vet-visit-date" if backToVetVisitDate else "/claim/animals-tested",
    attributes: {
      id: "back"
    }
  }) }}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <form method="POST">
        <input type="hidden" name="crumb" value="{{crumb}}"/>
        <h1 class="govuk-heading-l">What is the vet’s name?</h1>

        {{ govukInput({
          label: {
            text: "Vet's full name"
          },
          classes: "govuk-input-!-width-full",
          id: "name",
          name: "name",
          value: name,
          errorMessage: errorMessage
        }) }}

        {{ govukButton({
          text: "Continue",
          attributes: {
            id: "continue"
          },
          preventDoubleClick: true
        }) }}

      </form>
    </div>
  </div>
{% endblock %}
