{% extends './layouts/layout.njk' %}

{% block pageTitle %}{{ serviceName }} - GOV.UK{% endblock %}

{% block content %}
<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-l">You cannot claim for a livestock review for this business</h1>

    {% if (permissionError) %}
      <p class="govuk-body">You do not have the required permission to act for {{ organisationName }}{{ sbiText }}.</p>
      <h2 class="govuk-heading-m">What to do next</h2>
      <p class="govuk-body">To claim for this business, the business owner must give you either:</p>
      <ul class='govuk-list govuk-list--bullet'>
        <li>full permission level for business details</li>
        <li>‘submit’ permission level for the basic payment scheme</li>
      </ul>
    {% endif %}

    {% if (noApplicationFoundError) %}
      <p class="govuk-body">{{ organisationName }}{{ sbiText }} has not applied for an annual health and welfare review of livestock.</p>
      <h2 class="govuk-heading-m">What to do next</h2>
    {% endif %}

    {% if (claimHasAlreadyBeenMadeError) %}
      <p class="govuk-body">{{ organisationName }}{{ sbiText }} has already claimed for an annual health and welfare review of livestock.</p>
      <h2 class="govuk-heading-m">What to do next</h2>
    {% endif %}

    {% if (claimHasExpiredError) %}
      <p class="govuk-body">You accepted your annual health and welfare agreement offer on {{ latestApplicationDate }}.</p>
      <p class="govuk-body">To be eligible for funding, you must have completed and claimed for your review within 6 months of this date.</p>  
      <p class="govuk-body">The 6 month deadline for this review was {{ claimExpiredDate }}.</p>
      <h2 class="govuk-heading-m">What to do next</h2>
    {% endif %}
    
    {% if (noApplicationFoundError) %}
      <p class="govuk-body">If you need help, contact the Rural Payments Agency.</p>
    {% else %}
      <p class="govuk-body">If you have a question about this claim, contact the Rural Payments Agency.</p>
    {% endif %}

    {{ rpaContactDetails(ruralPaymentsAgency) }}

    {% if (claimHasAlreadyBeenMadeError or claimHasExpiredError) %}
      <p class="govuk-body">Have your agreement number with you when you call or include it in your email.</p>
    {% endif %}

    {% if hasMultipleBusinesses %}
      <h2 class="govuk-heading-m">Claim for another business</h2>
      <p class="govuk-body">You can <a href='{{ backLink }}'>claim for another business</a> that has applied for a review.</p>
    {% endif %}
  </div>
</div>
{% endblock %}
