{% extends './layouts/layout.njk' %} {% block pageTitle %}{% if errorMessage
%}Error: {% endif %}Genetic Sequencing - {{ serviceName }} - GOV.UK{% endblock
%} {%block beforeContent %}
{{
  govukBackLink({
    text: "Back",
    href: backLink
  })
}}
{% endblock %} {% block content %}
<div class="govuk-grid-row">
  <div class="govuk-grid-row govuk-width-container govuk-!-static-margin-top-0">
    <div class="govuk-grid-column-two-thirds govuk-!-static-padding-0">
      {% if errorMessage %}
      {{
        govukErrorSummary({
          titleText: "There is a problem",
          errorList: [
            {
              text: errorMessage.text,
              href: "#geneticSequencing"
            }
          ]
        })
      }}
      {% endif %}
      <div class="govuk-grid-row">
        <h1 class="govuk-heading-l">
          What was the result of the genetic sequencing?
        </h1>

        <form method="POST" autocomplete="off" novalidate="novalidate">
          <input type="hidden" name="crumb" value="{{ crumb }}" />
          {{
            govukRadios({
              id: "geneticSequencing",
              name: "geneticSequencing",
              fieldset: {
                legend: {
                  classes:
                    "govuk-fieldset__legend--m govuk-!-static-margin-bottom-6"
                }
              },
              hint: {
                text: "You can find this on the summary the vet gave you. Select one option"
              },
              errorMessage: errorMessage,
              items: [
                {
                  value: "mlv",
                  text: "Modified Live virus (MLV) only",
                  checked: previousAnswer === "mlv"
                },
                {
                  value: "prrs1",
                  text: "Wild Type (WT) PRRS 1 only",
                  checked: previousAnswer === "prrs1"
                },
                {
                  value: "prrs1Plus",
                  text: "(WT) PRRS 1 plus MLV or recombination",
                  checked: previousAnswer === "prrs1Plus"
                },
                {
                  value: "recomb",
                  text: "Recombination only",
                  checked: previousAnswer === "recomb"
                },
                {
                  value: "prrs2",
                  text: "Any PRRS 2 (reportable by the laboratory)",
                  checked: previousAnswer === "prrs2"
                }
              ]
            })
          }}

          {{
            govukButton({
              text: "Continue",
              attributes: { id: "btnContinue" },
              preventDoubleClick: true
            })
          }}
        </form>
      </div>
    </div>
    {% endblock %}
  </div>
</div>
