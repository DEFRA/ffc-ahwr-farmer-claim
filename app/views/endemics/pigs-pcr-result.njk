{% extends './layouts/layout.njk' %} {% block pageTitle %}{% if errorMessage
  %}Error: {% endif %}PCR Test Result - {{ serviceName }} - GOV.UK{% endblock %}
  {%block beforeContent %}
  {{
    govukBackLink({
      text: "Back",
      href: backLink
    })
  }}
  {% endblock %} {% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-row govuk-width-container govuk-!-static-margin-top-0">
      <div class="govuk-grid-column-two-thirds govuk-!-static-padding-0">
        {% if errorMessage %}
        {{
          govukErrorSummary({
            titleText: "There is a problem",
            errorList: [
              {
                text: errorMessage.text,
                href: "#pcrResult"
              }
            ]
          })
        }}
        {% endif %}
        <div class="govuk-grid-row">
          <h1 class="govuk-heading-l">What was the result of the PCR test?</h1>
  
          <form method="POST" autocomplete="off" novalidate="novalidate">
            <input type="hidden" name="crumb" value="{{ crumb }}" />
            {{
              govukRadios({
                id: "pcrResult",
                name: "pcrResult",
                fieldset: {
                  legend: {
                    classes:
                      "govuk-fieldset__legend--m govuk-!-static-margin-bottom-6"
                  }
                },
                hint: {
                  text: "You can find this on the summary the vet gave you."
                },
                errorMessage: errorMessage,
                items: [
                  {
                    value: "negative",
                    text: "PCR negative",
                    checked: previousAnswer === "negative"
                  },
                  {
                    value: "positive",
                    text: "PCR positive",
                    checked: previousAnswer === "positive"
                  }
                ]
              })
            }}

            {{
              govukButton({
                text: "Continue",
                attributes: { id: "btnContinue" },
                preventDoubleClick: true
              })
            }}
          </form>
        </div>
      </div>
      {% endblock %}
    </div>
  </div>
  