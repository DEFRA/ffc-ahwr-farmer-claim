{% extends './layouts/layout.njk' %}

{% block pageTitle %}Check herd details - {{ serviceName }} - GOV.UK{% endblock %}

{% block beforeContent %}
  {{ govukBackLink({
    text: "Back",
    href: backLink,
	attributes: { id: "back" }
  }) }}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-l">Check herd details</h1>

      {{ govukSummaryList({
      classes: "govuk-!-margin-bottom-9",
      rows: [
      {
        key: {
          text: "Herd name"
        },
        value: {
          text: herdName
        }
      },
      {
        key: {
          text: "CPH number for herd"
        },
        value: {
          text: herdCph
        },
        actions: {
          items: [
            {
              href: herdCphLink,
              text: "Change",
              visuallyHiddenText: "CPH number"
            }
          ]
        }
      },
      {
        key: {
          text: "Herd details"
        },
        value: {
          html: herdReasons
        },
        actions: {
          items: [
            {
              href: herdReasonsLink,
              text: "Change",
              visuallyHiddenText: "herd details"
            }
          ]
        }
      }]
    }) }}

      <form method="POST">
        <input type="hidden" name="crumb" value="{{crumb}}"/>
        {{ govukButton({
            text: "Continue",
            attributes: { id: "continue" },
            preventDoubleClick: true
            }) 
        }}
      </form>
    </div>
  </div>
{% endblock %}