{% extends './layouts/layout.njk' %}

{% block pageTitle %}Confirm the details - {{ serviceName }}{% endblock %}

{% block beforeContent %}
  {{ govukBackLink({
    text: "Back",
    href: backLink.href,
	  attributes: {id: "back"}
  }) }}
{% endblock %}

{% block content %}
<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-l">Check review details</h1>

    <form method="POST" autocomplete="off" novalidate="novalidate">
      <input type="hidden" name="crumb" value="{{crumb}}"/>
      {{ govukSummaryList({
        classes: 'govuk-!-margin-bottom-9',
        rows: listData.rows
      }) }}

      {{ govukRadios(radios) }}

      {{ govukButton({
        text: "Continue",
        attributes: {id: "btnContinue"},
        preventDoubleClick: true
      }) }}
    </form>
  </div>
</div>
{% endblock %}
