{% extends './layouts/layout.njk' %}

{% block pageTitle %}What is the laboratory unique reference number for the test results? - {{ serviceName }}{% endblock %}

{% block beforeContent %}
  {{ govukBackLink({
    text: "Back",
    href: "/vet-visit-date",
    attributes: {
      id: "back"
    }
  }) }}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <form method="POST">
        <input type="hidden" name="crumb" value="{{crumb}}"/>
        <h1 class="govuk-heading-l">What is the laboratory unique reference number for the test results?</h1>

        {{ govukInput({
          label: {
            text: "Enter the unique reference number (URN) for the laboratory test results."
          },
          classes: "govuk-input-!-width-full",
          id: "urn",
          name: "urn",
          value: urn,
          errorMessage: errorMessage
        }) }}

        {{ govukButton({
          text: "Continue",
          attributes: {
            id: "continue"
          }
        }) }}

      </form>
    </div>
  </div>
{% endblock %}
