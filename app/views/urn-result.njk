{% extends './layouts/layout.njk' %}

{% block pageTitle %}Enter the Unique Reference Number (URN) of the test result - {{ serviceName }}{% endblock %}

{% block beforeContent %}
  {{ govukBackLink({
    text: "Back",
    href: "/vet-visit-date",
    attributes: {
      id: "back"
    }
  }) }}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <form method="POST">
        <input type="hidden" name="crumb" value="{{crumb}}"/>
        <h1 class="govuk-heading-l">Enter the Unique Reference Number (URN) of the test result</h1>

        {{ govukInput({
          label: {
            text: "Unique reference number"
          },
          classes: "govuk-input-!-width-full",
          id: "urn",
          name: "urn",
          value: urn,
          errorMessage: errorMessage
        }) }}

        {{ govukButton({
          text: "Continue",
          attributes: {
            id: "continue"
          }
        }) }}

      </form>
    </div>
  </div>
{% endblock %}
